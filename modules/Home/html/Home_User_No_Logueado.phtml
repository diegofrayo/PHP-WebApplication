<div class="span6">
	<div class="row-fluid">
		<div class="span12">
			<div class="divFormularios moduloApp">
				<form id="formRegistro" enctype="multipart/form-data" method="post"
					action="<!--{Root Site}-->/modules/home/ControladorHome.php">
					<div class="descripcionFormularios">
						<h2 style="color: #0244BE">Registro</h2>

					</div>
					<div class="divInputsFormularios">
						<label>Nombre </label>
						<div>
							<input name="nombre" type="text" maxlength="20" required />
						</div>
						<label>Email </label>
						<div>
							<input onblur="comprobarEmailDisponible();" name="email"
								id="emailRegistro" type="email" required maxlength="50" />
							<div id="divEmailDisponible"></div>
						</div>
						<label>Nick </label>
						<div>
							<input onblur="comprobarNickDisponible();" id="nickRegistro"
								name="nick-registro" type="text" maxlength="15" required />
							<div id="divNickDisponible"></div>
						</div>
						<label>Password </label>
						<div>
							<input name="password-registro" type="password" maxlength="10" required />
						</div>
						<!-- <label>Foto </label>
						<div>
							<input name="foto" type="file" />
						</div> -->

						<div class="divButtonSubmitCenter">
							<input class="btn btn-primary" id="submitRegistro" type="submit"
								name="action" value="Registrar" />
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<div class="span6">
	<div class="row-fluid">
